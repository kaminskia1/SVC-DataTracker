<header>
    <i class="fa fa-bars"></i>
    <span class="title">SVC - Aid Management</span>
</header>

<nav>
    <ul>
        {% for item in navbar %}
            {%  if item.callback == "_bar" %}
                <li class="bar"></li>
            {% elseif item.callback == "_title" %}
                <li class="title">
                    {{ item.title }}
                </li>
            {%  else %}
                <li id="{{ item.callback }}">
                    <div class="icon">
                        <i class="{{ item.icon }}"></i>
                    </div><div class="name">
                        {{ item.public_name }}
                    </div><div class="chevron">
                        <i class="fa fa-chevron-right"></i>
                    </div>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
    <div class="barrier"></div>
</nav>