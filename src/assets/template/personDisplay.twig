<link href="assets/css/display.css" type="text/css" rel="stylesheet" />

<div class="display">
    <div class="title">
        <div class="title-main">{{ name_last }}, {{ name_first }} #{{ id }}</div>
        <div class="title-sub">Member Since {{ _formattedDate }}</div>
    </div>

    <div class="button-container">
        <div class="button add">Add Entry</div>
        <div class="button edit">Edit</div>
        <div class="button delete">Delete</div>
    </div>

    <div class="card-container">
        <div class="card info">
            <div class="card-title">Information</div>
            <div class="card-content">

                <div class="card-element">Aid Given: ${{ _totalAidGiven }}</div>
                <div class="card-element">Assistance: <span id="p_assistance">{{ assistance }}</span></div>

                {% if shutoff %}
                    <div class="card-element pointer">Shutoff: Yes</div>
                    <div class="card-element-dropdown">
                        <div class="card-element-sub">Date: <span id="p_shutoff_date">{{ _formattedShutoff_date }}</span></div>
                        <div class="card-element-sub">Reference: <span id="p_shutoff_referredby">{{ shutoff_referredby }}</span></div>
                    </div>
                {% else %}
                    <div class="card-element">Shutoff: No</div>
                {% endif %}

                {% if employed %}
                    <div class="card-element">Employed: Yes</div>
                    <div class="card-element-dropdown">
                        <div class="card-element-sub">Location: <span id="p_employed_location">{{ employed_location }}</span></div>
                    </div>
                {% else %}
                    <div class="card-element">Employed: No</div>
                {% endif %}

                {% if _formattedFamily|length > 0 %}
                    <div class="card-element pointer">Family: Yes</div>
                    <div class="card-element-dropdown">
                        {% for x,y in _formattedFamily %}
                            <div class="card-element-sub p_family_member_{{ x }}">{{ y.Type }} {{ y.Gender }}, {{ y.Age }}</div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="card-element">Family: No</div>
                {% endif %}

                {% if _formattedExtra|length > 0 %}
                <div class="card-element pointer">Extra:</div>
                <div class="card-element-dropdown">
                    {% for x,y in _formattedExtra %}
                        <div class="card-element-sub p_extra_{{ x }}">{{ x }}: {{ y }}</div>
                    {% endfor %}
                </div>
                {% endif %}

                <div class="card-element">Last Modified: {{ last_edited }}</div>

            </div>
        </div>
        <div class="card-secondary">

            <div class="card contact">
                <div class="card-title">Contact</div>
                <div class="card-content">
                    <div class="card-element">Phone: <span id="p_phone">{{ _formattedPhone }}</span></div>
                    <div class="card-element">Address: <span id="p_address">{{ address }}</span></div>
                </div>
            </div>

            <div class="card aid">
                <div class="card-title">Aid Entries</div>
                <div class="card-content">
                    {{ _aidTable|raw }}
                </div>
            </div>
        </div>

    </div>

</div>